{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "outDir": "cli",
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "ESNext"
    ],
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "noUncheckedIndexedAccess": false
  },
  "include": [
    "src"
  ]
}
