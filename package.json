{
  "private": true,
  "name": "@matejkosiarcik/azlint-root",
  "scripts": {
    "lint": "run-p lint:*",
    "lint:prettier": "prettier --list-different '**/*.{yml,yaml,json,html,htm,xhtml,css,scss,sass,md}'",
    "fmt": "run-p fmt:*",
    "fmt:prettier": "prettier --write '**/*.{yml,yaml,json,html,htm,xhtml,css,scss,sass,md}'"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  }
}
